# Clangd Configuration for Magica DAW
# Language server settings for IDE integration

CompileFlags:
  # Treat all files as C++20
  Add:
    - -std=c++20
    - -Wall
    - -Wextra

Index:
  # Index in background without blocking the editor
  Background: Build
  # Don't index standard library (you already know std::, juce::, etc.)
  StandardLibrary: No

Diagnostics:
  # Suppress overly aggressive warnings
  Suppress:
    - readability-make-member-function-const
    - bugprone-narrowing-conversions
    - cppcoreguidelines-narrowing-conversions
    - readability-identifier-length
    - misc-use-internal-linkage
    - cppcoreguidelines-avoid-non-const-global-variables  # TEST_CASE macros
    - readability-identifier-naming  # Don't enforce naming on macros

  # Analyze unused includes (can have false positives with templates/forward declarations)
  UnusedIncludes: Strict

InlayHints:
  # Show type hints
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  Designators: Yes

Hover:
  ShowAKA: Yes
